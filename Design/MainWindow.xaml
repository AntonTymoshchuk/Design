<Window x:Class="Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Design"
        mc:Ignorable="d"
        Title="Design test" Width="600" Height="600"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <TextBlock x:Name="DesignTextBlock" Width="300" Height="50" Canvas.Left="50" Canvas.Top="50" TextAlignment="Center" FontSize="36"
                   MouseEnter="TextBlock_MouseEnter"
                   MouseMove="TextBlock_MouseMove"
                   MouseLeave="TextBlock_MouseLeave">
            <TextBlock.Background>
                <LinearGradientBrush x:Name="TextBlockGradient" StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="DarkCyan"  Offset="0.5"/>
                </LinearGradientBrush>
            </TextBlock.Background>
            DESIGN
        </TextBlock>
    </Canvas>
</Window>
